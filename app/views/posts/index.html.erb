<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Body</th>
    <th>Published</th>
    <th>Number of Songs</th>
    <th>Enclosure(s)</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.body.html_safe %></td>
    <td><%= post.published %></td>
    <td><%= post.playlists.length %></td>
    <td><% unless post.enclosure.nil? %><%= link_to post.enclosure.file_name, post.enclosure.url %><% end %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, confirm: 'Are you sure?', method: :delete, :class => "btn danger small" %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
