<div class="row fields">
	<div class="clearfix span2">
		<%= f.label :number %>
		<div class="input">
			<%= f.text_field :number, :style => "width:20px" %>
		</div>
	</div>
	<div class="clearfix span3">
		<%= f.label :artist %>
		<div class="input">
			<%= f.text_field :artist, :class => "small" %>
		</div>
	</div>
	<div class="clearfix span4">
		<%= f.label :title %>
		<div class="input">
			<%= f.text_field :title, :class => "medium" %>
		</div>
	</div>
	<div class="clearfix span6">
		<%= f.label :url %>
		<div class="input">
			<%= f.text_field :url, :class => "medium"%>
		</div>
	</div>
	<%= link_to_remove_fields "remove", f %>
</div>