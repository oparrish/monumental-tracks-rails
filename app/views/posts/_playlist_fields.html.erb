<fieldset>
	<div class="row fields">
		<div class="clearfix span1">
			<%= f.label :number %>
			<div class="input">
				<%= f.text_field :number, :style => "width:20px" %>
			</div>
		</div>
		<div class="clearfix span4">
			<%= f.label :artist %>
			<div class="input">
				<%= f.text_field :artist, :class => "large" %>
			</div>
		</div>
		<div class="clearfix span4">
			<%= f.label :title %>
			<div class="input">
				<%= f.text_field :title, :class => "large" %>
			</div>
		</div>
		<div class="clearfix span4">
			<%= f.label :url %>
			<div class="input">
				<%= f.text_field :url, :class => "large"%>
			</div>
		</div>
		<div class="span2">
			<%= link_to_remove_fields "remove", f %>
		</div>
	</div>
</fieldset>